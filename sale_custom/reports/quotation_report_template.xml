<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="quotation_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div style="page-break-before: always;">
                    <t t-call="sale_custom.quotation_report_template" t-lang="doc.partner_id.lang"/>
                </div>
            </t>
        </t>
    </template>

    <template id="quotation_report_template">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <t t-set="forced_vat"
               t-value="doc.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
            <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
            <div class="opacity-10">
                <img src="/sale_custom/static/src/img/logo_mo.png"
                     style="position: absolute; padding-top: 40%; left: 30%; transform: translate(-50%, -50%); width: 400px;
                     height: auto; filter: opacity(10%); z-index: 0; pointer-events: none; mix-blend-mode: multiply;"/>
            </div>
            <!-- HEADER SECTION - ONLY ON FIRST PAGE -->
            <div style="width: 100%; font-family: 'Times New Roman'; font-size: 18px; text-align: center; position: relative;">

                <!-- LOGO BÊN TRÁI -->
                <img class="img img-responsive" src="/sale_custom/static/src/img/logo_thanh_minh.jpg"
                     style="width: 146px; height: 111px; position: absolute; left: 10px; top: 30px"/>

                <!-- TIÊU ĐỀ CÔNG TY - CĂN GIỮA -->
                <h2 style="margin: 0 auto; width: 100%; font-weight: bold; color: blue;margin-left: 40px">
                    CÔNG TY TNHH THIẾT KẾ &amp; IN ẤN THÀNH MINH
                </h2>

                <!-- ĐỊA CHỈ, EMAIL, HOTLINE - CĂN PHẢI DƯỚI -->
                <div style="margin-top: 10px; width: 100%; text-align: left; padding-left: 170px;">
                    <div style="padding: 2px;">Địa chỉ: 21B Ông Ích Khiêm, Phường Hải Châu, Thành Phố Đà Nẵng, Việt Nam</div>
                    <div style="padding: 2px;">MST: 0402282749</div>
                    <div style="padding: 2px;">Điện thoại: 0385.345.201 - 0905.850.970</div>
                    <div style="padding: 2px;">Email: vanthanh744@gmail.com</div>
                </div>
                <div style="width: 100%; text-align:center;margin-top: 10px">
                    <h2>
                        <span style="font-weight: bold;">PHIẾU THU</span>
                        <div style="font-size: 16px;font-style: italic; ">(QÚY KHÁCH GIỮ LẠI ĐỂ XUẤT HÓA ĐƠN, CHỈ CÓ GIÁ
                            TRỊ TRONG 5 NGÀY LÀM VIỆC)
                        </div>
                    </h2>
                </div>
                <div style="padding-top: 15px">
                    <table style="border-style: hidden; width:100%">
                        <tbody style="line-height: 15px;border: 0;">
                            <tr style="padding:2px;border: 0;">
                                <td style="width: 70%;padding:1px;border: 0;text-align: left;">
                                    Người mua:
                                    <span t-esc="doc.partner_id.name"/>
                                </td>
                                <td style="width: 30%;padding:1px;border: 0;text-align: left;">
                                    Điện thoại:
                                    <span t-esc="doc.partner_id.phone"/>
                                </td>
                            </tr>
                            <tr style="padding:5px;border: 0;">
                                <td t-attf-colspan="2" style="width: 70%;padding:1px;border: 0;text-align: left;">
                                    Địa chỉ:
                                    <span t-esc="doc.partner_id.street"></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div>
                    <table style="border: 1px; width:1000px;page-break-inside: avoid;">
                        <thead style="display: table-row-group">
                            <tr style="font-size: 19px; background-color: #DCDDDE">
                                <th style="vertical-align: middle;padding:3px; width: 5%">STT</th>
                                <th style="vertical-align: middle;padding:3px;">NỘI DUNG</th>
                                <th style="vertical-align: middle;padding:3px; width: 15%">TÊN VẬT TƯ</th>
                                <th style="vertical-align: middle;padding:3px; width: 15%">HÌNH THỨC</th>
                                <th style="vertical-align: middle;padding:3px; width: 5%">ĐVT</th>
                                <th style="vertical-align: middle;padding:3px; width: 5%">SỐ TỜ</th>
                                <th style="vertical-align: middle;padding:3px; width: 5%">SL BỘ</th>
                                <th style="vertical-align: middle;padding:3px; width: 5%">TSL</th>
                                <th style="vertical-align: middle;padding:3px; width: 15%">ĐƠN GIÁ</th>
                                <th style="vertical-align: middle;padding:3px; width: 15%">THÀNH TIỀN</th>
                            </tr>
                            <tr style="font-size: 19px; background-color: #DCDDDE">
                                <th style="vertical-align: middle;padding:3px;">1</th>
                                <th style="vertical-align: middle;padding:3px;">2</th>
                                <th style="vertical-align: middle;padding:3px;">3</th>
                                <th style="vertical-align: middle;padding:3px;">4</th>
                                <th style="vertical-align: middle;padding:3px;"></th>
                                <th style="vertical-align: middle;padding:3px;">5</th>
                                <th style="vertical-align: middle;padding:3px;">6</th>
                                <th style="vertical-align: middle;padding:3px;">7</th>
                                <th style="vertical-align: middle;padding:3px;">8</th>
                                <th style="vertical-align: middle;padding:3px;">9=(7*8)</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="stt" t-value="1"/>
                            <t t-foreach="lines_to_report" t-as="line">
                                <tr style="font-size: 18px">
                                    <td style="text-align: center;vertical-align: middle;">
                                        <div style="width: 100%;">
                                            <span t-esc="stt"/>
                                        </div>
                                        <t t-set="stt" t-value="stt + 1"/>
                                    </td>
                                    <td style="padding:3px;text-align: center; vertical-align: middle;">
                                        <div style="text-align: left">
                                            <span t-field="line.remark"/>
<!--                                            <span t-field="line.name"/>-->
                                            <!--                                            <t t-esc="line"></t>-->
                                        </div>
                                    </td>
                                    <td style="padding:3px;text-align: center; vertical-align: middle;">
                                        <div style="">
                                            <span t-field="line.product_template_id.name"/>
                                        </div>
                                    </td>
                                    <td style="padding:3px;text-align: center; vertical-align: middle;">
                                        <div style="width: 100%">
                                            <span t-field="line.specifications"/>
                                        </div>
                                    </td>
                                    <td style="text-align: center; padding:3px; vertical-align: middle;">
                                        <div style="">
                                            <span t-esc="line.unit_type"/>
                                        </div>
                                    </td>
                                    <td style="text-align: right; padding-right:5px; vertical-align: middle;">
                                        <div style="">
                                            <span t-esc="line.paper_qty"/>
                                            <!--                                            <span t-esc="'{:,}'.format(int(line.price_unit))"/>-->

                                        </div>
                                    </td>
                                    <td style="text-align: right; padding-right:5px;vertical-align: middle;">
                                        <div style="">
                                            <span t-esc="line.paper_set"/>
                                            <!--                                            <span t-esc="'{:,}'.format(int(line.price_subtotal))"/>-->
                                        </div>
                                    </td>
                                    <td style="text-align: right; padding-right:5px;vertical-align: middle;">
                                        <div style="">
                                            <span t-esc="'{:,}'.format(int(line.product_uom_qty))"/>
                                        </div>
                                    </td>
                                    <td style="text-align: right; padding-right:5px;vertical-align: middle;">
                                        <div style="">
                                            <span t-esc="'{:,}'.format(int(line.price_unit))"/>
                                        </div>
                                    </td>
                                    <td style="text-align: right; padding-right:5px;vertical-align: middle;">
                                        <div style="">

                                            <span t-esc="'{:,}'.format(int(line.price_subtotal))"/>

                                        </div>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <table style="border: 1px; width:1000px; page-break-inside: avoid;">
                        <thead></thead>
                        <tbody>
                            <tr style="border-style: solid; border-width: 2px;">
                                <td t-attf-colspan="4" t-attf-rowspan="5"
                                    style="font-size: 18px; border-right: 2px solid #000; vertical-align: middle;">
                                    <div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;">
                                        <img class="img img-responsive" src="/sale_custom/static/src/img/QR.jpg"
                                             style="width:300px; height: 342px;"/>
                                    </div>
                                </td>
                                <td t-attf-colspan="5" style="text-align: left; padding:2px;font-weight: bold;">
                                    Tiền hàng
                                </td>
                                <td style="text-align: right; padding:2px;font-weight: bold;">
                                    <span t-esc="doc.tax_totals['formatted_amount_untaxed']"></span>
                                </td>
                            </tr>
                            <tr style="border-style: solid; border-width: 2px;">
                                <td t-attf-colspan="5" style="text-align: left; padding:2px;font-weight: bold;">
                                    Tiền ứng trước
                                </td>
                                <td style="text-align: right; padding:2px;font-weight: bold;">
                                    <span t-esc="'{:,}'.format(int(doc.advance_payment))"/>
                                    <span>₫</span>
                                </td>
                            </tr>
                            <tr style="border-style: solid; border-width: 2px;">
                                <td t-attf-colspan="5" style="text-align: left; padding:2px;font-weight: bold;">
                                    <t t-if="doc.tax_totals['groups_by_subtotal']"
                                       t-esc="doc.tax_totals['groups_by_subtotal']['Số tiền trước thuế'][0]['tax_group_name']"/>
                                    <t t-else="">
                                        <!--                                        <span t-esc="doc.tax_totals"></span>-->
                                        <span>Chiết khấu (0%)</span>
                                    </t>
                                </td>
                                <td style="text-align: right; padding:2px;font-weight: bold;">
                                    <span t-if="doc.tax_totals['groups_by_subtotal']"
                                          t-esc="doc.tax_totals['groups_by_subtotal']['Số tiền trước thuế'][0]['formatted_tax_group_amount']"></span>
                                </td>
                            </tr>
                            <tr style="border-style: solid; border-width: 2px;">
                                <td t-attf-colspan="5" style="text-align: left; padding:2px;font-weight: bold;">
                                    Tổng tiền thanh toán
                                </td>
                                <td style="text-align: right; padding:2px;font-weight: bold;">
                                    <t t-set="tax_totals" t-value="doc.tax_totals['amount_total']"></t>
                                    <t t-set="advance_payment" t-value="doc.advance_payment"></t>
                                    <t t-set="total" t-value="tax_totals - advance_payment"></t>
                                    <span t-esc="'{:,}'.format(int(total))"/>
                                    <!--                                    <span>₫</span>-->
                                </td>
                            </tr>
                            <t t-set="total_in_text"
                               t-value="doc.number_to_text(int(doc.tax_totals['amount_total']))"></t>
                            <tr style="border-style: solid; border-width: 2px;">
                                <td t-attf-colspan="6" style="text-align: left; padding:2px;font-weight: bold;">
                                    Viết bằng chữ:
                                    <span t-esc="total_in_text"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div style="text-align: right; padding-top: 10px;padding-right: 110px; font-style: italic">
                        Ngày
                        <t t-esc="doc.order_date.strftime('%d')"/>
                        tháng
                        <t t-esc="doc.order_date.strftime('%m')"/>
                        năm
                        <t t-esc="doc.order_date.strftime('%Y')"/>
                    </div>
                    <br/>
                    <table style="border-style: hidden; width:100%;page-break-inside: avoid;">
                        <tbody style="line-height: 15px;border: 0; text-align: center;">
                            <tr style="padding:2px;border: 0;">
                                <td style="width: 50%;padding:2px;border: 0;vertical-align: middle;font-weight: bold">
